@model IEnumerable<DynamicDatabase.Data.Entities.Attribute>

@{
    ViewData["Title"] = "Index";
}

<h1>Attributes</h1>

<div class="row">
    <div class="col-md-5">

    </div>
    <div class="col-md-7">

    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EntityTypeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EntityTypeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<br /><br /><br />


<table class="table">
    <thead>
        <tr>
            <th>Entity Type</th>
            <th>Attribute Name</th>
            <th>Is Active</th>
        </tr>
    </thead>
    <tbody id="tableBody"></tbody>
</table>