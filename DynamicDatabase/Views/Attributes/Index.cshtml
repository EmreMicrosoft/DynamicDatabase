@model DynamicDatabase.Models.ViewModels.AttributeViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Attributes</h1>

<div class="row">
    <div class="col-md-5">
        <table class="table">
            <thead>
            <tr>
                <th>Entity Type</th>
                <th>Attribute Name</th>
                <th>Is Active</th>
            </tr>
            </thead>
            <tbody id="tableBody"></tbody>
        </table>
    </div>
    <div class="col-md-7">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Attribute.EntityTypeId" class="control-label"></label>
                <input asp-for="@Model.Attribute.EntityTypeId" class="form-control" />
                <span asp-validation-for="@Model.Attribute.EntityTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Attribute.Name" class="control-label"></label>
                <input asp-for="@Model.Attribute.Name" class="form-control" />
                <span asp-validation-for="@Model.Attribute.Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="@Model.Attribute.IsActive" />
                    @Html.DisplayNameFor(model => model.Attribute.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>